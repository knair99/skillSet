<html>
<head>
    <title>Symantec skill search</title>
    <link rel="stylesheet" href="/stylesheets/index.css">
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.18/angular-ui-router.js"></script>
    <script src="/javascripts/angularUsers.js"></script>
</head>

<body ng-app="user-add" ng-controller="UserAdd">


<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <!--User routing-->
            <div class="page-header">
                <h1>Add an employee page</h1>
            </div>
            <form ng-submit="addEmployee()" style="margin-top:30px;">
                <h3>Add a new employee</h3>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" ng-model="name"></input>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Title" ng-model="title"></input>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="ID" ng-model="id"></input>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Phone" ng-model="phone"></input>
                </div>
                <button type="submit" class="btn btn-primary">Submit employee details</button>
            </form>
    </div>
</div>

</body>
</html>


